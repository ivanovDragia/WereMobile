<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_columnWeight="5"
    android:layout_column="2"
    android:layout_row="3"
    android:background="@drawable/border"
    android:layout_marginTop="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/productIdLabel"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:text="Product Name"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/productIdTextView"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="fill"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quantityLotsLabel"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:text="Quantity"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quantityLotsTextView"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="fill"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/expirationDateLable"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:text="Expiration Date"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/expirationDateTextView"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="fill"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lotNumberLable"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:text="Lot Number"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lotNumberTextView"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="fill"
        android:textColor="@color/black"/>

</GridLayout>