<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_columnWeight="5"
    android:layout_column="2"
    android:layout_row="8"
    android:background="@drawable/border"
    android:layout_marginTop="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameContragentLabel"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:text="Name"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameContragentTextView"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="fill"
        android:textColor="@color/black"
        android:gravity="right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bullstatContragentLabel"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:text="Bullstat"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bullstatContragentTextView"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="fill"
        android:textColor="@color/black"
        android:gravity="right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/VATContragentLabel"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:text="VAT"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/VATContragentTextView"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="fill"
        android:textColor="@color/black"
        android:gravity="right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cityContragentLabel"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:text="City"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cityContragentTextView"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_gravity="fill"
        android:textColor="@color/black"
        android:gravity="right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AddressContragentLabel"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:text="Address"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addressContragentTextView"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_gravity="fill"
        android:textColor="@color/black"
        android:gravity="right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MRPContragentLabel"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:text="MRP"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MRPContragentTextView"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:layout_row="6"
        android:layout_column="1"
        android:layout_gravity="fill"
        android:textColor="@color/black"
        android:gravity="right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phoneNumberContragentLabel"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:text="Phone"
        android:layout_row="7"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phoneNumberContragentTextView"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:layout_row="7"
        android:layout_column="1"
        android:layout_gravity="fill"
        android:textColor="@color/black"
        android:gravity="right"/>

    <ImageButton
        android:id="@+id/buttonDeleteContragent"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/delete"
        android:layout_row="8"
        android:layout_column="1"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        />

    <ImageButton
        android:id="@+id/buttonEditContragent"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/edit"
        android:layout_row="8"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_margin="10dp"
        />

</GridLayout>